

<div class="container text-center padded">
<h2 class="title">Your places booking requests</h2>
  <div class="row table-title">
    <div class="col-xs-4">
      Your places
    </div>

    <div class="col-xs-2">
      Check-in
    </div>

    <div class="col-xs-2">
      Check-Out
    </div>

    <div class="col-xs-2">
      Current status
    </div>

    <div class="col-xs-1">
      Accept
    </div>

    <div class="col-xs-1">
      Reject
    </div>
  </div>

  <% @bookings.each do | booking | %>
    <div class="row">
      <div class="col-xs-4">
        <%= booking.product.title %>
      </div>

      <div class="col-xs-2">
        <%= booking.check_in %>
      </div>

      <div class="col-xs-2">
        <%= booking.check_out %>
      </div>

      <div class="col-xs-2">
        <%= booking.status %>
      </div>

      <%= simple_form_for(booking, url: account_booking_path(booking)) do | f | %>
        <div class="col-xs-1 btn btn-success btn-mini">
          <input type="hidden" value="true" name="booking[status]">
          <%= f.submit "Accept" %>
        </div>
      <% end %>

      <%= simple_form_for(booking, url: account_booking_path(booking)) do | f | %>
        <div class="col-xs-1 btn btn-danger btn-mini">
          <input type="hidden" value="false" name="booking[status]">
          <%= f.submit "Reject" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>