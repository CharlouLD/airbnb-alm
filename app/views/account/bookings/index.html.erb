

<div class="container text-center padded">
<h2 class="title">Your places booking requests</h2>
  <div class="listing">
    <h4>
      <div class="col-xs-12 ls-title">
        <div class="col-xs-4">
          <div class='first-col'>Your places</div>
        </div>

        <div class="col-xs-2">
          <div>Check-in</div>
        </div>

        <div class="col-xs-2">
          <div>Check-Out</div>
        </div>

        <div class="col-xs-2">
          <div>Customer</div>
        </div>

        <!-- <div class="col-xs-1">
          <div>Accept</div>
        </div>

        <div class="col-xs-1">
          <div>Reject</div>
        </div> -->
      </div>
    </h4>

    <% @bookings.each do | booking | %>
      <div class="col-xs-12 ls-row">
        <div class="col-xs-4 ">
          <div class='first-col'><%= booking.product.title %></div>
        </div>

        <div class="col-xs-2">
          <div><%= booking.check_in %></div>
        </div>

        <div class="col-xs-2">
          <div><%= booking.checkout %></div>
        </div>

        <div class="col-xs-2">
          <div><%= booking.customer.email %></div>
        </div>

        <%= simple_form_for(booking, url: account_booking_path(booking)) do | f | %>
          <div class="col-xs-1">
            <% if booking.status %>
              <input type="hidden" value="true" name="booking[status]">
              <%= f.submit "Accepted", class: 'btn listing-btn selected' %>
            <% else %>
              <input type="hidden" value="true" name="booking[status]">
              <%= f.submit "Accept", class: 'btn listing-btn' %>
            <% end %>
          </div>
        <% end %>

        <%= simple_form_for(booking, url: account_booking_path(booking)) do | f | %>
          <div class="col-xs-1">
          <% if booking.status == false %>
            <input type="hidden" value="false" name="booking[status]">
            <%= f.submit "Rejected", class: 'btn listing-btn selected' %>
          <% else %>
            <input type="hidden" value="false" name="booking[status]">
            <%= f.submit "Reject", class: 'btn listing-btn' %>
          <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>