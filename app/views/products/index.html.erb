<h1>index products</h1>


<div class="padded-container">

  <div class="container">

   <div class="row">

    <% @products.each do |product| %>

     <div class="col-xs-6 col-sm-4">

      <div class="card">


        <div id="img-card">
          <%= image_tag product.picture.url(:medium) %>
        </div>

       <div class="price-ticket">
         <span><%= product.night_price %></span>
         <sup>$</sup>
       </div>

       <div class="bg-white">
         <p><%= link_to product.title, product_path(product) %></p>
       </div>

      </div>

     </div>

     <% end %>

   </div>

  </div>

</div>



