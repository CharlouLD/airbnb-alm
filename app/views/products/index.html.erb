<h1>index products</h1>



 <div class="container">

   <div class="row">

    <% @products.each do |product| %>

     <div class="col-xs-12 col-sm-3 col-sm-offset-3">

      <div class="announce">
        <p><%= link_to product.title, product_path(product) %></p>
        <p>$<%= product.night_price %></p>
      </div>

     </div>

     <% end %>

   </div>

 </div>

